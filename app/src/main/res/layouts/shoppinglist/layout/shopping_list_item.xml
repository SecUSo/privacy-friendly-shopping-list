<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8sp"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <ImageView
        android:id="@+id/reminder_bar"
        android:layout_width="@dimen/status_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:src="@drawable/button_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/summary_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/listPreferredItemHeight">

            <TextView
                android:id="@+id/textview_list_name"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/list_margin"
                android:layout_marginRight="100sp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:singleLine="true"
                android:text="@string/ph_list_name"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_list_name"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_list_info"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/list_margin"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="@dimen/list_padding"
                    android:singleLine="true"
                    android:text="@string/date_short_pattern"
                    android:textColor="@color/middlegrey"
                    android:textSize="@dimen/text_small" />

                <ImageView
                    android:id="@+id/imageview_reminder_icon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_perm_group_device_alarms"
                    app:tint="@color/middlegrey" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_high_prio_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/textview_prod_quantity"
                android:src="@drawable/ic_error_black_24sp"
                app:tint="@color/yellow" />

            <ImageButton
                android:id="@+id/expand_button_list"
                android:layout_width="50sp"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textview_prod_quantity"
                android:background="?android:selectableItemBackground"
                android:padding="15sp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_keyboard_arrow_down_white_48sp"
                app:tint="?attr/colorAccent" />

            <TextView
                android:id="@+id/textview_prod_quantity"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50sp"
                android:layout_marginRight="@dimen/list_margin"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:text="@string/ph_list_nr_items"
                android:textColor="@color/middlegrey"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_list_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_margin"
            android:layout_marginRight="@dimen/list_margin"
            android:layout_marginBottom="@dimen/list_margin"
            android:paddingLeft="@dimen/list_padding"
            android:text="@string/ph_lists_details"
            android:textStyle="italic"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
