<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8sp"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/summary_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/listPreferredItemHeight">

            <TextView
                android:id="@+id/textview_product_name"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_marginLeft="@dimen/list_margin"
                android:layout_marginRight="110sp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:singleLine="true"
                android:text="@string/ph_product_name"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/textview_product_info"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_product_name"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin_big"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding"
                android:singleLine="true"
                android:text="@string/ph_product_info"
                android:textColor="@color/middlegrey"
                android:textSize="@dimen/text_small" />

            <CheckBox
                android:id="@+id/checkbox_is_selected"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_alignEnd="@+id/textview_product_info"
                android:layout_alignParentTop="true"
                android:buttonTint="?attr/colorAccent"
                android:gravity="center_vertical"
                android:padding="@dimen/list_padding" />

            <Button
                android:id="@+id/product_button_plus"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_alignStart="@+id/checkbox_is_selected"
                android:layout_centerVertical="true"
                android:background="@drawable/button_normal"
                android:text="+"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/expand_button_list"
                app:tint="?attr/colorAccent"
                android:layout_width="50sp"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textview_prod_quantity"
                android:background="?android:selectableItemBackground"
                android:padding="15sp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_keyboard_arrow_down_white_48sp" />

            <TextView
                android:id="@+id/textview_prod_quantity"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/listPreferredItemHeight"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_toLeftOf="@id/checkbox_is_selected"
                android:gravity="center_vertical"
                android:text="@string/ph_list_nr_items"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_list_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_marginBottom="@dimen/list_margin"
                android:layout_toStartOf="@+id/product_image_in_detail"
                android:paddingLeft="@dimen/list_padding"
                android:text="@string/ph_lists_details"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/product_image_in_detail"
                android:layout_width="@dimen/foto_preview_size"
                android:layout_height="@dimen/foto_preview_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/list_margin"
                android:scaleType="fitCenter" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
